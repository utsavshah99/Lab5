@model Lab5.Models.News

@{
    ViewData["Title"] = "Delete";
}

<style>
    .news-image {
        width: 40%;
        height: 300px;
    }
</style>

<h1>Delete News</h1>

<h3>Are you sure you want to delete this news item?</h3>

<div>
    <img src="@Model.ImageUrl" alt="News Image" class="news-image" />
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <br />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-id="@Model.SportClubId" class="btn btn-secondary">Cancel</a>
</form>


