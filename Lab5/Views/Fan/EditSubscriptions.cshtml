@model Lab5.Models.ViewModels.FanSubscriptionViewModel

@{
    ViewData["Title"] = "Edit Subscriptions";
}

<h1>Edit Subscriptions for @Model.Fan.FirstName @Model.Fan.LastName</h1>

<form asp-action="UpdateSubscriptions" method="post">
    <input type="hidden" name="fanId" value="@Model.Fan.Id" />

    <div class="form-group">
        <label for="subscriptions">Subscriptions</label>
        <div>
            @foreach (var subscription in Model.Subscriptions)
            {
                <div>
                    <input type="checkbox"
                           name="subscriptions"
                           value="@subscription.SportClubId"
                    @(subscription.IsMember ? "checked" : "") />
                    @subscription.Title
                </div>
            }
