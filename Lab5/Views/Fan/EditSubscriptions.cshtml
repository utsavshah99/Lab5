            <input type="checkbox" name="subscriptions" value="1" /> Club 1<br />
            <input type="checkbox" name="subscriptions" value="2" /> Club 2<br />
            <input type="checkbox" name="subscriptions" value="3" /> Club 3<br />
            <button type="submit">Save Changes</button> *@
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index">Back to List</a>
</form>

